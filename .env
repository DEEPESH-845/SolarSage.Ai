# Database
DATABASE_TYPE=sqlite
SQLITE_DATABASE_PATH=./data/solar_panel_system.db

# ESP32 Configuration
ESP32_SERIAL_PORT=/dev/ttyUSB0
ESP32_BAUDRATE=115200

# MQTT Settings
MQTT_ENABLED=true
MQTT_BROKER_HOST=192.168.1.100
MQTT_BROKER_PORT=1883

# Image Processing
IMAGE_SAVE_PATH=./data/images
IMAGE_FORMAT=jpg

# AI Configuration
MODEL_CONFIDENCE_THRESHOLD=0.8

# API Settings
API_HOST=0.0.0.0
API_PORT=8000